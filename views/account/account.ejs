<h1>
    <%= title %>
</h1>
<div class="text-center">
    <p><%- messages() %></p>
</div>

<% if (accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %>
    </h2>
    <!-- Update Account Link: always visible -->
    <p><a href="/account/edit/<%= accountData.account_id %>">Update Account Information</a></p>
    <% if (accountData.account_type==='Employee' || accountData.account_type==='Admin' ) { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv">Go to Inventory Management</a></p>
    <% } %>
<% } %>